<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lumidaejang.movieapi.mapper.MovieMapper">
    
    <!-- 결과를 Movie 객체로 매핑 -->
    <resultMap id="MovieResultMap" type="com.lumidaejang.movieapi.entity.Movie">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="overview" column="overview" />
    </resultMap>
    
    <!-- 전체 영화 목록 조회 -->
    <select id="findAll" resultMap="MovieResultMap">
        SELECT id, title, overview
        FROM movie
        ORDER BY id ASC
    </select>

    <!-- ID로 영화 조회 -->
    <select id="findById" resultMap="MovieResultMap">
        SELECT id, title, overview
        FROM movie
        WHERE id = #{id}
    </select>

    <!-- 등록 -->
    <insert id="insert" parameterType="com.lumidaejang.movieapi.entity.Movie" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO movie (title, overview)
        VALUES (#{title}, #{overview})
    </insert>

    <!-- 수정 -->
    <update id="update" parameterType="com.lumidaejang.movieapi.entity.Movie">
        UPDATE movie
        SET title = #{title},
                overview = #{overview}
        WHERE id = #{id}
    </update>
    
</mapper>